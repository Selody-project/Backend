{
  "name": "xern-backend",
  "version": "1.1.0",
  "description": "Starter code for Node application",
  "type": "commonjs",
  "scripts": {
    "client": "npm run dev --prefix ../Frontend",
    "server": "nodemon src/app.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "echo \"Error: no build script specified\" && exit 1",
    "lint": "eslint --fix src/",
    "test": "cross-env NODE_ENV=test jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xERN-shareANDcommunity/Backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xERN-shareANDcommunity/Backend/issues"
  },
  "homepage": "https://github.com/xERN-shareANDcommunity/Backend#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^6.7.0",
    "fs": "^0.0.1-security",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.2.0",
    "path": "^0.12.7",
    "request": "^2.88.2",
    "sequelize": "^6.30.0",
    "swagger-autogen": "^2.23.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^27.2.4",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/errors/"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
